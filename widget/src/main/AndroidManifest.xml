<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ls.widget">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ui.MainActivity"
            android:screenOrientation="portrait"
            android:configChanges="keyboardHidden|orientation|screenSize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!--recyclerview-->
        <activity
            android:name=".ui.recyclerview.RvMainActivity"
            android:screenOrientation="portrait"
            android:label="@string/rv_main"
            android:configChanges="keyboardHidden|orientation|screenSize">>
        </activity>
        <activity
            android:name=".ui.recyclerview.RvGeneralActivity"
            android:screenOrientation="portrait"
            android:label="@string/rv_general"
            android:configChanges="keyboardHidden|orientation|screenSize">>
        </activity>
        <activity
            android:name=".ui.recyclerview.RvStyleActivity"
            android:screenOrientation="portrait"
            android:label="@string/rv_style"
            android:configChanges="keyboardHidden|orientation|screenSize">>
        </activity>
    </application>

</manifest>